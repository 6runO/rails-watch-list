<div class="card-trip">
  <img src=<%= bookmark.movie.poster_url %>>
  <div class="card-trip-infos">
    <div>
      <div class="d-flex mb-1">
        <h2><%= bookmark.movie.title %></h2>
        <p class="ml-2"><i class="fas fa-star star-filled"></i> <%= bookmark.movie.rating %></p>
      </div>
      <p><%= bookmark.movie.overview %></p>
      <div class="d-flex justify-content-between mt-2">
        <p><i class="fas fa-quote-left"></i> <%= bookmark.comment %></p>
        <h2 class="card-trip-pricing"><%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?'}%></h2>
      </div>
    </div>
  </div>
</div>
